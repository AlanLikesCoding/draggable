{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "lib": [
            "ES6",
            "DOM"
        ],
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./src"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}